{%- capture richText -%}
<div class="content-indent {{ section.settings.top-offeset}}">          
  <div class="section-cover id-{{section.id}} wow fadeIn" style="background-color:{{section.settings.sec_bg_clr}}; color:{{ section.settings.text_clr}};">  		      
    <div class="{% if section.settings.fullwidth %}fullwidth{% else %}page-width{%endif%}">
      {% if section.settings.image != blank %}        
      	{%- assign img_url = section.settings.image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
          <p class="tc"><span class="imgWrapper" style="max-width:{{section.settings.image.width}}px;">
            <img class="img_fl lazyload" src="{{ section.settings.image | img_url: '50x' }}" width="50" height="50" data-src="{{img_url}}" data-widths="[180, 360, 540, 720, 900]"
            	data-aspectratio="{{ section.settings.image.aspect_ratio }}" data-sizes="auto" alt="{{ section.settings.image.alt | escape }}">
          </span></p>
      {%- endif -%}
      <div class="text-{{section.id}} m_auto db{% unless section.settings.align_left %} tc{% endunless %}">                          
          {% if section.settings.title != blank %}<span class="db mb20 {{section.settings.font-size}}">{{ section.settings.title}}</span> {% endif %}			
          {% if section.settings.richtxt != blank %}  <div class="mb30">{{ section.settings.richtxt }}</div>{% endif %} 
          {% if section.settings.btntxt and section.settings.btnurl != blank %}                             
	          <a class="btn {{section.settings.btn-size}} {{section.settings.btn-style}}" href="{{section.settings.btnurl}}">{{ section.settings.btntxt }}</a>
          {% endif %}  
        
         {% if section.settings.btntxt1 and section.settings.btnurl1 != blank %}                             
	          <a class="btn {{section.settings.btn-size}} {{section.settings.btn-style}}" href="{{section.settings.btnurl1}}">{{ section.settings.btntxt1 }}</a>
          {% endif %}  
        
      </div>
    </div> 
  </div>
</div>   
<style>  
  .text-{{section.id}} a:not(.btn){color:{{section.settings.text_clr}};}
  .text-{{section.id}} .btn {margin:0 5px;}
  @media only screen and (min-width: 1023px) {
    .text-{{section.id}} { max-width:{{section.settings.max-width}}%; width:100%; }
  }   
</style>
{%- endcapture -%}
{{richText | strip_newlines | remove: "  " | remove: "	" }}
{% schema %}
  {
    "name": "Rich Text Block",
    "class": "index-section",   	
	"settings":[
	 {
         "type": "checkbox",
		 "id": "fullwidth",
